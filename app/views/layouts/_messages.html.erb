<% flash.each do |key, message| %>
  <div data-controller="flash" class="alert <%= flash_class(key) %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
  </div>

